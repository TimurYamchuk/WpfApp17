<Window x:Class="WpfApp17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp17"
        mc:Ignorable="d"
         Title="MainWindow" Height="250" Width="800">
    <Grid>
        <Button Name="btnStart" Content="Запустить" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Click="btnStart_Click" Margin="0,20,0,0"/>

        <TextBlock Name="txtStatus1" HorizontalAlignment="Center" VerticalAlignment="Top" Text="Поток 1: Ожидает" FontSize="14" Margin="0,60,0,0"/>

        <TextBlock Name="txtStatus2" HorizontalAlignment="Center" VerticalAlignment="Top" Text="Поток 2: Ожидает" FontSize="14" Margin="0,100,0,0"/>

        <TextBlock Name="txtStatus3" HorizontalAlignment="Center" VerticalAlignment="Top" Text="Поток 3: Ожидает" FontSize="14" Margin="0,140,0,0"/>
    </Grid>
</Window>