<Window x:Class="WpfApp17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="800">
    <Grid Margin="10">
        <Button Name="btnStart" Content="Запустить" 
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                Width="120" Height="40" Click="btnStart_Click" 
                Margin="0,20,0,0" FontSize="16"/>
        
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,80,0,0">
            <TextBlock Name="txtStatus1" Text="Поток 1: Ожидает" FontSize="14" Margin="0,5,0,0"/>
            <TextBlock Name="txtStatus2" Text="Поток 2: Ожидает" FontSize="14" Margin="0,5,0,0"/>
            <TextBlock Name="txtStatus3" Text="Поток 3: Ожидает" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
